{
  "name": "jaxcore-speak",
  "version": "0.0.4",
  "description": "Jaxcore speech synthesis library",
  "main": "lib/speak.js",
  "directories": {
    "lib": "lib"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build-examples": "npm run build-multiple-example && npm run build-client-example && npm run copy-docs",
    "build-multiple-example": "cd examples/multiplespeakers && npm run build",
    "build-client-example": "cd examples/client && npm run build",
    "zip-workers": "cd dist && tar cfvz workers.tar.gz *.js",
    "copy-docs": "rm -rf docs/client && rm -rf docs/multiplespeakers && mv examples/multiplespeakers/build docs/multiplespeakers && mv examples/client/build docs/client",
    "copy-workers": "cp -f dist/*.js examples/client/public/webworkers && cp -f dist/*.js examples/multiplespeakers/public/webworkers",
    "build-workers": "rm -rf dist && npm run build-sam-worker && npm run build-all-worker && npm run build-en-worker && npm run build-es-worker && npm run build-fr-worker && npm run copy-workers",
    "build-sam-worker": "webpack --env=sam && cat tools/webworkers/sam-interface.js >> dist/sam-worker.js",
    "build-all-worker": "webpack --env=all && cat tools/webworkers/espeak-interface.js >> dist/espeak-all-worker.js",
    "build-en-worker": "webpack --env=en && cat tools/webworkers/espeak-interface.js >> dist/espeak-en-worker.js",
    "build-es-worker": "webpack --env=es && cat tools/webworkers/espeak-interface.js >> dist/espeak-es-worker.js",
    "build-fr-worker": "webpack --env=fr && cat tools/webworkers/espeak-interface.js >> dist/espeak-fr-worker.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jaxcore/jaxcore-speak"
  },
  "homepage": "https://jaxcore.com",
  "author": "Jaxcore",
  "license": "GPL",
  "devDependencies": {
    "sam-js": "https://github.com/jaxcore/sam#jsonly"
  }
}
